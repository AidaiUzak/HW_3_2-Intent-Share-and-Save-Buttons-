<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/second_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="second name"
        app:layout_constraintTop_toBottomOf="@id/name_text_view"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/third_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="third name"
        app:layout_constraintTop_toBottomOf="@id/name_text_view"
        app:layout_constraintRight_toRightOf="parent"
        />


    <Button
        android:id= "@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="SHARE"

        app:layout_constraintTop_toBottomOf="@id/second_name_text_view"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="SAVE"
        app:layout_constraintTop_toBottomOf="@id/third_name_text_view"
        app:layout_constraintRight_toRightOf="parent"/>



</android.support.constraint.ConstraintLayout>